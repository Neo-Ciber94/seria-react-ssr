{
  "name": "seria-react-ssr",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "npm run build:seria && concurrently npm:dev:* \"generate-routes:watch\"",
    "dev:server": "tsx --watch src/entry.server.tsx --ignore ./src/routes/**/* --ignore ./src/generateRoutes.ts",
    "dev:client": "cross-env WATCH=true tsx esbuild.ts",
    "build:client": "tsx esbuild.ts",
    "build:server": "esbuild ./src/**/* --format=esm --splitting --bundle --platform=node --minify --outdir=./build/server",
    "build:seria": "esbuild ./src/core/client/seria.ts --bundle --format=esm --minify --outfile=./build/client/seria.js",
    "typecheck": "tsc --noEmit",
    "generate-routes:watch": "cross-env WATCH=true npm run generate-routes",
    "generate-routes": "tsx ./src/generateRoutes.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.2",
    "hono": "^4.4.2",
    "radix3": "^1.1.2",
    "react": "^19.0.0-rc-6d3110b4d9-20240531",
    "react-dom": "^19.0.0-rc-6d3110b4d9-20240531",
    "seria": "^0.2.0-beta2"
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.4",
    "prettier": "^3.3.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc"
  }
}