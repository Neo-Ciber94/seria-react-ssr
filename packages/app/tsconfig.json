{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "esnext",
		"noEmitOnError": true,
		"jsx": "react-jsx",
		"module": "esnext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src", "vite.config.ts"]
}
