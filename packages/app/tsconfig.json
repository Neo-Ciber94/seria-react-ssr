{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"noEmitOnError": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"types": [
			"framework/types.d.ts"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src",
		"vite.config.ts"
	]
}