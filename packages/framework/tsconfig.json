{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmitOnError": false,
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"strict": true,
		"skipLibCheck": true,
		"types": [
			"vitest/globals"
		],
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"dist",
		"node_modules",
		"src/**/*.test.ts",
		"src/**/test",
	]
}