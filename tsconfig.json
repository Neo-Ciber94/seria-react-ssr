{
  "compilerOptions": {
    "target": "esnext",
    "noEmitOnError": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/routes/*": [
        "./src/routes/*"
      ],
      "@/framework/*": [
        "./src/core/*"
      ]
    }
  },
  "include": [
    "src",
    "esbuild.*"
  ]
}