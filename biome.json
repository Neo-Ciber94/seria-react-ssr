{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"packages/**/*"
		],
		"ignore": [
			"dist/**",
			"build/**",
			"node_modules/**",
			"*.json"
		]
	},
	"formatter": {
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noUselessElse": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	}
}